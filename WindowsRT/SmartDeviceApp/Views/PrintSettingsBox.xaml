<StackPanel x:Name="printSettingsBox"
    x:Class="SmartDeviceApp.Views.PrintSettingsBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartDeviceApp.Views"
    xmlns:controls="using:SmartDeviceApp.Controls"
    xmlns:conv="using:SmartDeviceApp.Converters"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="1000"
    DataContext="{Binding PrintSettingsViewModel, Source={StaticResource Locator}}">

    <StackPanel.Resources>
        <conv:ResourceStringToTextConverter x:Key="ResourceStringToTextConverter"/>
        <conv:PrintSettingTypeToValueContentConverter x:Key="PrintSettingTypeToValueContentConverter"/>
        <conv:PrintSettingTypeToRightButtonVisibilityConverter x:Key="PrintSettingTypeToRightButtonVisibilityConverter"/>
        <conv:SelectedItemConverter x:Key="SelectedItemConverter"/>
    </StackPanel.Resources>

    <ItemsControl ItemsSource="{Binding Path=PrintSettingsList}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <controls:GroupListControl Text="{Binding Text, Converter={StaticResource ResourceStringToTextConverter}, ConverterParameter=Uppercase}">
                    <controls:GroupListControl.Content>
                        <ListView x:Name="printSettingsListView" ItemsSource="{Binding PrintSettings}" ItemContainerStyle="{StaticResource STYLE_ListViewItem}" 
                                  IsItemClickEnabled="False" SelectionMode="Single"
                                  SelectedItem="{Binding DataContext.SelectedPrintSetting, ElementName=printSettingsBox}" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <controls:KeyValueControl Text="{Binding Path=Text, Converter={StaticResource ResourceStringToTextConverter}}"
                                                              LeftButtonVisibility="Collapsed"
                                                              RightButtonVisibility="{Binding Type, Converter={StaticResource PrintSettingTypeToRightButtonVisibilityConverter}}"
                                                              IconImage="ms-appx:///Resources/Images/img_btn_dummy_print_setting.png"
                                                              ValueContent="{Binding Type, Converter={StaticResource PrintSettingTypeToValueContentConverter}}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="SelectionChanged">
                                    <Core:InvokeCommandAction Command="{Binding DataContext.SelectPrintSetting, ElementName=printSettingsBox}" InputConverter="{StaticResource SelectedItemConverter}"/>
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                        </ListView>
                    </controls:GroupListControl.Content>
                </controls:GroupListControl>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</StackPanel>
