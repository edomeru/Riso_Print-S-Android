-->

        <Grid x:Name="printersGrid" Grid.Row="0">
            <Grid.Projection>
                <PlaneProjection/>
            </Grid.Projection>
            <controls:ViewControl x:Name="printersView" Title="{Binding Path=DocumentTitleText}"
                                  Button1Command="{Binding Path=ToggleMainMenuPane}" 
                                  Button2Command="{Binding Path=ToggleScanPrintersPane}"
                                  Button3Command="{Binding Path=ToggleAddPrinterPane}"
                                  
                                  >
                <Grid Margin="0,0,0,0" x:Name="printerInformationGrid" Background="#FFCDCDCD" >
                    <local:AdaptableGridView x:Name="printerInfoView" ItemWidth="400" 
                              ScrollViewer.VerticalScrollMode="Enabled"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                                             SelectionMode="None"
                                             IsItemClickEnabled="False" 
                                             Margin="50,0,50,0" ItemsSource="{Binding PrinterList}">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid  Orientation="Horizontal" 
                                                ItemWidth="{Binding ElementName=printerInfoView, Path=ItemWidth}"
                                                MaximumRowsOrColumns="{Binding ElementName=printerInfoView, Path=MaxRowsOrColumns}"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate>

                                <Grid HorizontalAlignment="Left" Height="350"  Margin="0,0,0,0" Background="#FFADADAD" Width="400">
                                    <StackPanel>
                                        <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                        <Run Text="Name: "/>
                                        <Run Text="{Binding Name}"/>
                                        </TextBlock>
                                        <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                        <Run Text="Online: "/>
                                        <Run Text="{Binding isOnline}"/>
                                        </TextBlock>
                                        <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                        <Run Text="Sex: "/>

                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </local:AdaptableGridView>

                    <Button x:Name="btnTemp" Content="Button" Click="Button_Click" Margin="0,300"/>
                </Grid>
            </controls:ViewControl>



        </Grid>

        <!-- Printers Informations -->


    </Grid>
</base:PageBase>
