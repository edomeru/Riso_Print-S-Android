<Page
    x:Name="pageRoot"
    x:Class="SmartDeviceApp.Views.PrintersPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartDeviceApp.Views"
    xmlns:common="using:SmartDeviceApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
        <x:String x:Key="PageName">Printers</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Back button and page title -->
        <Grid Height="80" VerticalAlignment="Top" Background="#FF8541D8" x:Name="navigationGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,30,30,30" 
                        VerticalAlignment="Top"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource PageName}" Style="{StaticResource SubheaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
        </Grid>
        <Grid Margin="0,80,0,0" Background="#FFCDCDCD" x:Name="printerInformationGrid">
            <local:AdaptableGridView x:Name="adaptableGridView" ItemWidth="400" 
                          AutomationProperties.AutomationId="CustomerGridView"
                          AutomationProperties.Name=" Customers Group"
                          ScrollViewer.VerticalScrollMode="Enabled"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                                         SelectionMode="None"
                                         IsItemClickEnabled="False" Margin="50,0,0,0">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VariableSizedWrapGrid  Orientation="Horizontal" 
                                            ItemWidth="{Binding ElementName=adaptableGridView, Path=ItemWidth}"
                                            MaximumRowsOrColumns="{Binding ElementName=adaptableGridView, Path=MaxRowsOrColumns}"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <!--Update DataTemplate with Karen's User Controls-->
                        <Grid HorizontalAlignment="Left" Height="350"  Margin="0,0,0,0" Background="#FFADADAD" Width="400">
                            <StackPanel>
                                <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                    <Run Text="Name: "/>
                                    <Run Text="{Binding Name}"/>
                                </TextBlock>
                                <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                    <Run Text="Age: "/>
                                    <Run Text="{Binding isOnline}"/>
                                </TextBlock>
                                <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                    <Run Text="Sex: "/>
                                    <!--<Run Text="{Binding Content}"/>-->
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </local:AdaptableGridView>
        </Grid>
        <!-- Printers Informations -->
        
        
        
    </Grid>
</Page>
