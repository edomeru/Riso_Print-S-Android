                                <Grid HorizontalAlignment="Stretch" Margin="0">
                                    <TextBlock  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0">
                                    <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid.Projection>
                <PlaneProjection/>
