<UserControl x:Name="twoPageControl"
    x:Class="SmartDeviceApp.Controls.TwoPageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartDeviceApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    
    <UserControl.Resources>
        <Style x:Key="STYLE_PageAreaScrollViewer" TargetType="ScrollViewer">
            <Style.Setters>
                <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                <Setter Property="ZoomMode" Value="Enabled"/>
                <Setter Property="MinZoomFactor" Value="1.0"/>
                <Setter Property="HorizontalScrollMode" Value="Enabled"/>
                <Setter Property="VerticalScrollMode" Value="Enabled"/>
            </Style.Setters>
        </Style>
        <Style x:Key="STYLE_PageAreaGrid" TargetType="Grid">
            <Style.Setters>
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="Auto"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="ManipulationMode" Value="All"/>
            </Style.Setters>
        </Style>
        <Style x:Key="STYLE_PageSeparator" TargetType="Line">
            <Style.Setters>
                <Setter Property="Stroke" Value="{StaticResource BRUSH_Gray3}"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="StrokeDashCap" Value="Flat"/>
                <Setter Property="X1" Value="0"/>
                <Setter Property="Y1" Value="0"/>
                <Setter Property="X2" Value="0"/>
                <Setter Property="Y2" Value="0"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <ScrollViewer x:Name="pageAreaScrollViewer" Style="{StaticResource STYLE_PageAreaScrollViewer}" >
        <Grid x:Name="manipulationGrid"  ManipulationMode="All" >
            
           

            

            <!--<Grid x:Name="nextDisplayAreaGrid" Style="{StaticResource STYLE_PageAreaGrid}" 
                 Background="Red" Opacity="0.01"
                  >
                <Grid.Clip>
                    <RectangleGeometry
                    Rect="0,0,80000,80000">
                        <RectangleGeometry.Transform>
                            <TransformGroup>
                                <TranslateTransform
                                x:Name="Page3ClipTranslateTransform" />
                                <RotateTransform
                                x:Name="Page3ClipRotateTransform" />
                            </TransformGroup>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>


                <Grid.RowDefinitions>
                    <RowDefinition x:Name="topNextDisplayArea"/>
                    <RowDefinition x:Name="bottomNextDisplayArea"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftNextDisplayArea"/>
                    <ColumnDefinition x:Name="rightNextDisplayArea"/>
                </Grid.ColumnDefinitions>

                <local:PageControl x:Name="topNextDisplay" Grid.Row="0" Grid.Column="1"
                                    Image="{Binding LeftNextPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="leftNextDisplay"  Grid.Row="1" Grid.Column="0"                           
                                    Image="{Binding LeftNextPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="rightNextDisplay" Grid.Row="1" Grid.Column="1"
                                    Image="{Binding RightNextPageImage, ElementName=twoPageControl}" BorderThickness="1"/>

                <Line x:Name="horizontalSeparator"
                  Grid.Row="0" Grid.Column="0"
                  Grid.RowSpan="2" Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  StrokeDashArray="7,5"
                  X2="{Binding MaxWidth, ElementName=pageAreaGrid}"
                  Style="{StaticResource STYLE_PageSeparator}" />
                <Line x:Name="verticalSeparator"
                  Grid.Row="0" Grid.Column="0"
                  Grid.RowSpan="2" Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  StrokeDashArray="7,5"
                  Y2="{Binding MaxHeight, ElementName=pageAreaGrid}"
                  Style="{StaticResource STYLE_PageSeparator}" />
