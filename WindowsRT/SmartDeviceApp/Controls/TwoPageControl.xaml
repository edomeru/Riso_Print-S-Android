            <Grid x:Name="pageAreaGrid2" Style="{StaticResource STYLE_PageAreaGrid}" 
                 >
                <Grid.Clip>
                    <RectangleGeometry
                    Rect="0,0,80000,80000">
                        <RectangleGeometry.Transform>
                            <TransformGroup>
                                <TranslateTransform
                                x:Name="Page2ClipTranslateTransform2" />
                                <RotateTransform
                                x:Name="Page2ClipRotateTransform2" />
                            </TransformGroup>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>


                <Grid.RowDefinitions>
                    <RowDefinition x:Name="topPageArea2"/>
                    <RowDefinition x:Name="bottomPageArea2"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftPageArea2"/>
                    <ColumnDefinition x:Name="rightPageArea2"/>
                </Grid.ColumnDefinitions>

                <local:PageControl x:Name="topPage2" Grid.Row="0" Grid.Column="1"
                                Image="{Binding LeftBackPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="leftPage2" Grid.Row="1" Grid.Column="0"
                                Image="{Binding RightBackPageImage, ElementName=twoPageControl}"
                                />
                <local:PageControl x:Name="rightPage2" Grid.Row="1" Grid.Column="1"
                                Image="{Binding RightBackPageImage, ElementName=twoPageControl}"/>

                <!-- 
                
                
                
                -->

            </Grid>

            <Grid x:Name="displayAreaGrid" Style="{StaticResource STYLE_PageAreaGrid}" 
                 Background="Yellow"
                  >
                <Grid.Clip>
                    <RectangleGeometry
                    Rect="0,0,80000,80000">
                        <RectangleGeometry.Transform>
                            <TransformGroup>
                                <TranslateTransform
                                x:Name="Page1ClipTranslateTransform" />
                                <RotateTransform
                                x:Name="Page1ClipRotateTransform" />
                            </TransformGroup>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>


                <Grid.RowDefinitions>
                    <RowDefinition x:Name="topDisplayArea"/>
                    <RowDefinition x:Name="bottomDisplayArea"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftDisplayArea"/>
                    <ColumnDefinition x:Name="rightDisplayArea"/>
                </Grid.ColumnDefinitions>

                <local:PageControl x:Name="topDisplay" Grid.Row="0" Grid.Column="1"
                                    Image="{Binding LeftPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="leftDisplay"  Grid.Row="1" Grid.Column="0"                           
                                    Image="{Binding LeftPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="rightDisplay" Grid.Row="1" Grid.Column="1"
                                    Image="{Binding RightPageImage, ElementName=twoPageControl}" BorderThickness="1"/>
                <Line x:Name="horizontalSeparator"
                  Grid.Row="0" Grid.Column="0"
                  Grid.RowSpan="2" Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  StrokeDashArray="7,5"
                  X2="{Binding MaxWidth, ElementName=pageAreaGrid}"
                  Style="{StaticResource STYLE_PageSeparator}" />
                <Line x:Name="verticalSeparator"
                  Grid.Row="0" Grid.Column="0"
                  Grid.RowSpan="2" Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  StrokeDashArray="7,5"
                  Y2="{Binding MaxHeight, ElementName=pageAreaGrid}"
                  Style="{StaticResource STYLE_PageSeparator}" />

            </Grid>

            <Grid x:Name="pageAreaGrid" Style="{StaticResource STYLE_PageAreaGrid}" 
                 Opacity="0.01">
                <Grid.Clip>
                    <RectangleGeometry
                    Rect="0,0,80000,80000">
                        <RectangleGeometry.Transform>
                            <TransformGroup>
                                <TranslateTransform
                                x:Name="Page2ClipTranslateTransform" />
                                <RotateTransform
                                x:Name="Page2ClipRotateTransform" />
                            </TransformGroup>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </Grid.Clip>


                <Grid.RowDefinitions>
                    <RowDefinition x:Name="topPageArea"/>
                    <RowDefinition x:Name="bottomPageArea"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftPageArea"/>
                    <ColumnDefinition x:Name="rightPageArea"/>
                </Grid.ColumnDefinitions>

                <local:PageControl x:Name="topPage" Grid.Row="0" Grid.Column="1"
                                Image="{Binding LeftBackPageImage, ElementName=twoPageControl}"/>
                <local:PageControl x:Name="leftPage" Grid.Row="1" Grid.Column="0"
                                Image="{Binding RightBackPageImage, ElementName=twoPageControl}"
                                />
                <local:PageControl x:Name="rightPage" Grid.Row="1" Grid.Column="1"
                                Image="{Binding RightBackPageImage, ElementName=twoPageControl}"/>
                
                <!-- 
                
                
                
                -->

            </Grid>


            <!--<Grid
            x:Name="TransitionGridContainer" Background="Green">-->
                <Grid
                    x:Name="transitionDisplayGrid"
                    Opacity="0">
                    <Grid.RenderTransform>
                        <CompositeTransform
                            x:Name="TransitionDisplayGridContainerTransform" />
                    </Grid.RenderTransform>
                    <Grid.Clip>
                        <RectangleGeometry
                            Rect="0,0,80000,80000">
                            <RectangleGeometry.Transform>
                                <TransformGroup>
                                    <TranslateTransform
                                        x:Name="TransitionDisplayGridClipTranslateTransform" />
                                    <RotateTransform
                                        x:Name="TransitionDisplayGridClipRotateTransform" />
                                </TransformGroup>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </Grid.Clip>
                    <Grid.RowDefinitions>
                    <RowDefinition x:Name="topTransitionDisplayArea"/>
                    <RowDefinition x:Name="bottomTransitionDisplayArea"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftTransitionDisplayArea"/>
                    <ColumnDefinition x:Name="rightTransitionDisplayArea"/>
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="TransitionDisplayImage"
                        Stretch="None" />
                </Grid>
        
                <Grid
                x:Name="transitionGrid"
                Opacity="0">
                    <Grid.RenderTransform>
                        <CompositeTransform
                        x:Name="TransitionGridContainerTransform" />
                    </Grid.RenderTransform>
                    <Grid.Clip>
                        <RectangleGeometry
                        Rect="0,0,80000,80000">
                            <RectangleGeometry.Transform>
                                <TransformGroup>
                                    <TranslateTransform
                                    x:Name="TransitionGridClipTranslateTransform" />
                                    <RotateTransform
                                    x:Name="TransitionGridClipRotateTransform" />
                                </TransformGroup>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </Grid.Clip>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="topTransitionArea"/>
                    <RowDefinition x:Name="bottomTransitionArea"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="leftTransitionArea"/>
                    <ColumnDefinition x:Name="rightTransitionArea"/>
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="TransitionImage"
                    Stretch="None" />
                </Grid>
            </Grid>

        <!--</Grid>-->
    </ScrollViewer>
    
</UserControl>
