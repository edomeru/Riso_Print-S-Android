<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.riso.smartprint"
    android:versionCode="1"
    android:versionName="v0.01.20140516" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:name="jp.co.riso.smartdeviceapp.SmartDeviceApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/ids_app_launcher_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.co.riso.smartdeviceapp.view.SplashActivity"
            android:theme="@style/SplashTheme"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.co.riso.smartdeviceapp.view.MainActivity" 
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>
