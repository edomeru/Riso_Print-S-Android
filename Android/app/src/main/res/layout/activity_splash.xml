<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewFlipper">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/theme_light_2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/img_splash" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false"  >

        <include
            layout="@layout/actionbar_main" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33" >

            <jp.co.riso.smartdeviceapp.view.webkit.SDAWebView
                android:id="@+id/contentWebView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/LicenseButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/licenseAgreeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/licenseDisagreeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_light_2"
        android:splitMotionEvents="false">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/permission_logo_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_logo_icon"
            android:layout_margin="@dimen/permission_logo_margin"
            android:background="@color/theme_light_2"/>

        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/textSwitcher"
            android:layout_margin="@dimen/permission_button_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ids_lbl_permission_onboarding_1"
                android:textStyle="bold"
                android:textColor="@color/theme_color_2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ids_lbl_permission_onboarding_2"
                android:textStyle="bold"
                android:textColor="@color/theme_color_2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center_horizontal"/>
        </TextSwitcher>
        <Button
            android:id="@+id/backButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ids_lbl_permission_back"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:background="@color/theme_color_1"
            android:textColor="@color/theme_light_1"
            android:layout_margin="@dimen/permission_button_margin"
            android:padding="@dimen/permission_button_padding"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/settingsButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ids_lbl_permission_settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:background="@color/theme_color_1"
            android:textColor="@color/theme_light_1"
            android:layout_margin="@dimen/permission_button_margin"
            android:padding="@dimen/permission_button_padding"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/permission_button_margin">
            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ids_lbl_permission_next"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@color/theme_color_1"
                android:textColor="@color/theme_light_1"
                android:padding="@dimen/permission_button_padding"/>
            <Button
                android:id="@+id/startButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ids_lbl_permission_start"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@color/theme_color_1"
                android:textColor="@color/theme_light_1"
                android:padding="@dimen/permission_button_padding"
                android:visibility="invisible"/>
        </FrameLayout>
    </RelativeLayout>

</ViewFlipper>
