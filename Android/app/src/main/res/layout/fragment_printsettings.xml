<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/drawer_margin"
    android:background="@color/theme_light_3"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/theme_color_2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/home_title_padding"
        android:text="@string/ids_lbl_print_settings"
        android:textColor="@color/theme_light_1"
        android:textSize="@dimen/font_size_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_light_3">

        <jp.co.riso.smartdeviceapp.view.printsettings.PrintSettingsView
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </jp.co.riso.smartdeviceapp.view.printsettings.PrintSettingsView>
    </ScrollView>

</LinearLayout>
