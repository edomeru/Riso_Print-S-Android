<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_menu_height"
    android:background="@drawable/selector_printsettings_title"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
    	android:paddingLeft="@dimen/printsettings_icon_setting_padding"
    	android:paddingRight="@dimen/printsettings_icon_setting_padding"
        android:layout_weight="0" >
        
	    <ImageView
        	android:id="@+id/returnButtonIndicator"
	        android:layout_width="@dimen/printsettings_icon_width"
	        android:layout_height="@dimen/printsettings_icon_width"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@string/default_content_description"
	        android:src="@drawable/selector_printsettings_disclosure"
	        android:visibility="gone" />
        
	    <ImageView
	        android:id="@+id/menuIcon"
	        android:layout_width="@dimen/printsettings_icon_width"
	        android:layout_height="@dimen/printsettings_icon_width"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@string/default_content_description"
	        android:visibility="gone" />
    </LinearLayout>


    <TextView
        android:id="@+id/menuTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/default_textview"
        android:textAllCaps="true"
        android:textColor="@color/theme_light_1"
        android:textSize="@dimen/home_text_size" />

</LinearLayout>
