<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/printsettings_icon_setting_padding"
    android:paddingRight="@dimen/printsettings_icon_setting_padding"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/listValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_gravity="center_vertical"
        android:gravity="right|center_vertical"
        android:text="@string/default_textview"
        android:textColor="@color/theme_light_1"
        android:maxLines="2"
        android:textSize="@dimen/printsettings_listvalue_text_size" />

    <ImageView
        android:layout_width="@dimen/printsettings_disclosure_size"
        android:layout_height="@dimen/printsettings_disclosure_size"
        android:layout_weight="0.0"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/img_btn_submenu" />

</LinearLayout>
