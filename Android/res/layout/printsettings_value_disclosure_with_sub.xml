<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/printsettings_icon_setting_padding"
    android:paddingRight="@dimen/printsettings_icon_setting_padding"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_marginLeft="@dimen/printsettings_menu_padding"
    	android:orientation="vertical"
        android:layout_weight="1" >
        
	    <TextView
	        android:id="@+id/listValueTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/default_textview"
	        android:duplicateParentState="true"
	        android:textColor="@color/selector_printsettings_disclosure_text"
	        android:ellipsize="end"
	        android:maxLines="1"
	        android:singleLine="true"
	        android:textSize="@dimen/printsettings_listvalue_text_size" />
        
	    <TextView
	        android:id="@+id/listValueSubTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/default_textview"
	        android:duplicateParentState="true"
	        android:textColor="@color/selector_printsettings_disclosure_text"
	        android:ellipsize="end"
	        android:maxLines="1"
	        android:singleLine="true"
	        android:textSize="@dimen/printsettings_listvalue_text_size" />
        
    </LinearLayout>

    <ImageView
        android:id="@+id/disclosureIndicator"
        android:layout_width="@dimen/printsettings_disclosure_size"
        android:layout_height="@dimen/printsettings_disclosure_size"
        android:layout_weight="0.0"
        android:layout_gravity="center_vertical"
        android:duplicateParentState="true"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/selector_printsettings_submenu" />

</LinearLayout>
