<?xml version="1.0" encoding="utf-8"?>
<jp.co.riso.smartdeviceapp.view.widget.SDALinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SDALinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_main" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/emptyPrintersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ids_lbl_printers_empty"
            android:textColor="@color/theme_light_1"
            android:textSize="@dimen/font_size_large"
            android:visibility="gone" />

        <jp.co.riso.smartdeviceapp.view.printers.PrintersListView
            android:id="@+id/printer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_light_2"
            android:divider="@null" >
        </jp.co.riso.smartdeviceapp.view.printers.PrintersListView>
    </FrameLayout>

</jp.co.riso.smartdeviceapp.view.widget.SDALinearLayout>