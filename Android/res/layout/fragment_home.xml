<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <include layout="@layout/actionbar_main" />

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/tempPrintersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/temp_sidebar_spacing"
            android:text="@string/ids_lbl_printers" />

        <Button
            android:id="@+id/tempPrintJobsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/temp_sidebar_spacing"
            android:text="@string/ids_lbl_print_jobs" />

        <Button
            android:id="@+id/tempSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/temp_sidebar_spacing"
            android:text="@string/ids_lbl_settings" />
    </LinearLayout>

</LinearLayout>
