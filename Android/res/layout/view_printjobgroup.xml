<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/printJobsGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/theme_dark_2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/printJobGroupExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/ids_lbl_collapse"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/theme_light_1" />

        <TextView
            android:id="@+id/printJobGroupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/printJobGroupExpand"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toRightOf="@+id/printJobGroupExpand"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/theme_light_1" />

        <Button
            android:id="@+id/printJobGroupDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/printJobGroupExpand"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/theme_color_3"
            android:text="@string/ids_lbl_delete_jobs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/theme_light_1" />
    </RelativeLayout>

</LinearLayout>