<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/printJobsGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_dark_2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/printJobGroupExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/ids_lbl_collapse"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_light_1" />

        <TextView
            android:id="@+id/printJobGroupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toRightOf="@+id/printJobGroupExpand"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_light_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/theme_light_2"
            android:orientation="vertical" >

            <Button
                android:id="@+id/printJobGroupDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/theme_color_3"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/ids_lbl_delete_jobs"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_light_1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>