<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/printJobsGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_dark_2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/frameLayoutExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/printjob_expand_padding_side"
            android:paddingRight="@dimen/printjob_expand_padding_side" >

            <ImageView
                android:id="@+id/printJobGroupExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ids_lbl_expand"
                android:src="@android:drawable/arrow_up_float" />

            <ImageView
                android:id="@+id/printJobGroupCollapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ids_lbl_collapse"
                android:visibility="invisible"
                android:src="@android:drawable/arrow_down_float" />
        </FrameLayout>

        <TextView
            android:id="@+id/printJobGroupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toLeftOf="@+id/printJobGroupDeleteLayout"
            android:layout_toRightOf="@+id/frameLayoutExpand"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/theme_light_1" />

        <LinearLayout
            android:id="@+id/printJobGroupDeleteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/theme_light_2"
            android:orientation="vertical" >

            <Button
                android:id="@+id/printJobGroupDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/printjob_delgroupbtn_margin_left"
                android:background="@color/theme_color_3"
                android:paddingLeft="@dimen/printjob_delgroupbtn_padding_side"
                android:paddingRight="@dimen/printjob_delgroupbtn_padding_side"
                android:text="@string/ids_lbl_delete_jobs"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_light_1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>