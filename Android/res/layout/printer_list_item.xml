<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/printerListRow"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="@dimen/row_left_padding"
    android:paddingRight="@dimen/row_right_padding" >

    <ImageView
        android:id="@+id/img_onOff"
        android:layout_width="@dimen/printer_status_icon_size"
        android:layout_height="@dimen/printer_status_icon_size"
        android:layout_centerVertical="true"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/temp_img_btn_printer_status_online" />

    <TextView
        android:id="@+id/txt_printerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/row_with_disclosure_right_margin"
        android:layout_toRightOf="@+id/img_onOff"
        android:clickable="false"
        android:ellipsize="end"
        android:longClickable="false"
        android:maxLines="1"
        android:paddingLeft="@dimen/row_left_padding"
        android:textColor="@color/theme_dark_1" />

    <ImageView
        android:id="@+id/img_disclosure"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/default_content_description"
        android:src="@drawable/temp_img_btn_disclosure_icon" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/edit_box_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/img_disclosure"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/delete_padding"
        android:layout_marginTop="@dimen/delete_padding"
        android:background="@color/theme_dark_1"
        android:text="@string/ids_lbl_delete_printer"
        android:textColor="@color/theme_light_1"
        android:visibility="gone" />

</RelativeLayout>